extends base

block content
  p Hi #{data.to},
  p #{data.user.name} invites you to join their gym as #{data.role.replace(/-/g, " ").replace(/(^|\s)\S/g, (match) => match.toUpperCase())}.
  table.btn.btn-primary(role='presentation' border='0' cellpadding='0' cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation' border='0' cellpadding='0' cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Accept Invite
  p If you have already accepted, please ignore this email!
